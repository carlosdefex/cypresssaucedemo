[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 4

[*.feature]
indent_size = 2
trim_trailing_whitespace = true

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.har,*.json}]
indent_size = 4

[{*.htm,*.html,*.sht,*.shtm,*.shtml}]
indent_size = 2
trim_trailing_whitespace = true

[{*.yaml,*.yml}]
indent_size = 2
